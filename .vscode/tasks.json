{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // https://code.visualstudio.com/docs/editor/tasks-v1
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django - Run Server",
            "type": "shell",
            "command": "cd '${workspaceFolder}/project/hijri_calendar_project'; '${workspaceFolder}/.virtualenvs/myproject_env/Scripts/python' manage.py runserver",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Docker - Build and Run",
            "type": "shell",
            "command": "docker build --rm -f 'Dockerfile' -t bilgrami/hijri-calendar:latest .; docker run --rm -it -p 5000:5000/tcp bilgrami/hijri-calendar:latest",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
        },
            {
                "label": "Docker-Compose - run and launch bash to web",
                "type": "shell",
                "command": "docker build --rm -f 'Dockerfile' -t bilgrami/hijri-calendar:latest .; docker-compose up -d; docker-compose exec web bash;",
                "group": "build",
                "presentation": {
                    "reveal": "always",
                    "panel": "new"
                },
        },
    ]
}